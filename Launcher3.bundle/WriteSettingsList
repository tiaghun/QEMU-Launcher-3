#!/bin/bash

cd "${0%/*}"
cd CurrentSettings

Boot=$(cat BOOT)
CDROM=$(cat CDROM)
CPU=$(cat CPU)
FloppyA=$(cat FloppyA)
FloppyB=$(cat FloppyB)
HDD0=$(cat HDD0)
HDD1=$(cat HDD1)
Net=$(cat NET)
RAM=$(cat RAM)

printf '' > "$PWD"/SettingsList
echo -e "System\n=============================================\n(Architecture): "$CPU"\n--------------------------------------------------------------\n(RAM Allocation): "$RAM"\n--------------------------------------------------------------\n(Network Card): "$Net"\n--------------------------------------------------------------\n(Boot Device): "$Boot"\n--------------------------------------------------------------\n\nStorage\n=============================================\n(Floppy Drive A): "$FloppyA"\n--------------------------------------------------------------\n(Floppy Drive B): "$FloppyB"\n--------------------------------------------------------------\n(CDROM Drive): "$CDROM"\n--------------------------------------------------------------\n(Hard Drive 0): "$HDD0"\n--------------------------------------------------------------\n(Hard Drive 1): "$HDD1"\n--------------------------------------------------------------\n" > "$PWD"/SettingsList


